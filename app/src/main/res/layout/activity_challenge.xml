<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".challengeActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        >

        <ImageView
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:id="@+id/imgchrono"
            android:layout_marginLeft="20dp"
            android:src="@drawable/timer" />
        <TextView
            android:id="@+id/a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgchrono"
            android:visibility="visible"
            android:textColor="#848282"
            android:textSize="40dp" />


        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_toLeftOf="@+id/imgcup"
            android:textColor="#848282"
            android:textSize="40dp"
            android:visibility="visible"
            />
        <ImageView
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:id="@+id/imgcup"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/cup" />

    </RelativeLayout>
    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:max="100"
        android:progress="10"
        android:progressDrawable="@drawable/custom_proress_bar"
        android:visibility="visible"
        tools:style="@style/Widget.AppCompat.ProgressBar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"

        android:orientation="vertical">

        <TextView

            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:textAlignment="center"

            android:textColor="#000"
            android:textSize="35dp" />

        <LinearLayout
            android:id="@+id/layoutId"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:visibility="gone">

            <Button
                android:id="@+id/Menu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/background_button"
                android:textColor="#FFA000"
                android:layout_margin="5dp"
                android:text="Menu" />

            <Button
                android:id="@+id/Continue"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/background_button"
                android:textColor="#FFA000"
                android:layout_margin="5dp"
                android:text="Continue" />
        </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layoutbuttonid"
    android:visibility="visible"
    android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"

            android:paddingRight="20dp">

            <Button
                android:id="@+id/Rep1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/background_button"
                android:textColor="#FFA000"
                android:textSize="40dp"
                android:text="1"
                android:visibility="visible" />
            <Button
                android:id="@+id/Rep2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/background_button"
                android:textColor="#FFA000"
                android:textSize="40dp"
                android:text="2"
                android:visibility="visible" />
            <Button
                android:id="@+id/Rep3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/background_button"
                android:textColor="#FFA000"
                android:textSize="40dp"
                android:text="3"
                android:visibility="visible" />
            <Button
                android:id="@+id/Rep4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/background_button"
                android:textColor="#FFA000"
                android:textSize="40dp"
                android:text="4"
                android:visibility="visible" />

            <Button
                android:id="@+id/Rep5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/background_button"
                android:textColor="#FFA000"
                android:textSize="40dp"
                android:text="5"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"

            android:paddingRight="20dp">

            <Button
                android:id="@+id/Rep6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="6"
                android:background="@drawable/background_button"
                android:textColor="#FFA000"
                android:textSize="40dp"
                android:visibility="visible" />

            <Button
                android:id="@+id/Rep7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="7"
                android:background="@drawable/background_button"
                android:textColor="#FFA000"
                android:textSize="40dp"

                android:visibility="visible" />
            <Button
                android:id="@+id/Rep8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="8"
                android:background="@drawable/background_button"
                android:textColor="#FFA000"
                android:textSize="40dp"

                android:visibility="visible" />
            <Button
                android:id="@+id/Rep9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="9"
                android:background="@drawable/background_button"
                android:textColor="#FFA000"
                android:textSize="40dp"

                android:visibility="visible" />
            <Button
                android:id="@+id/Rep0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="0"
                android:background="@drawable/background_button"
                android:textColor="#FFA000"
                android:textSize="40dp"

                android:visibility="visible" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"

            android:paddingRight="20dp">


            <Button
                android:id="@+id/Bok"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="ok"
                android:background="@drawable/background_button"
                android:textColor="#FFA000"
                android:textSize="20dp"

                android:visibility="visible" />
            <Button
                android:id="@+id/Bclear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="clear"
                android:background="@drawable/background_button"
                android:textColor="#FFA000"
                android:textSize="20dp"

                android:visibility="visible" />
            <Button
                android:id="@+id/Bmoin"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="0.5"
                android:text="-"
                android:background="@drawable/background_button"
                android:textColor="#FFA000"
                android:textSize="40dp"

                android:visibility="visible" />


        </LinearLayout>

</LinearLayout>
        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="87dp"
            app:adSize="BANNER"
            app:adUnitId="@string/banner_id">

        </com.google.android.gms.ads.AdView>

    </LinearLayout>



</LinearLayout>